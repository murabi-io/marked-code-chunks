{
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/__tests__"],
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "esnext",

    "rootDir": "./src",
    "outDir": "build",

    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  }
}
